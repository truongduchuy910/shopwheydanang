<div data-bs-parallax-bg="true"
    style="background-image: url(&quot;/assets/img/25353826_1309172019188283_925594867823683217_n.jpg&quot;);background-position: top;background-size: cover;padding-top: 40px;padding-bottom: 40px;">
    <div class="container" style="margin-top: 40px;">
        <div class="row d-flex align-items-center">
            <div class="col">
                <h3 class="text-center text-white" style="margin-top: 20px;">TÍNH BMR<br>
                </h3>
                <hr>
                <input id="height" class="border rounded" type="number"
                    style="width: 100%;margin-bottom: 10px;padding: 2px;" placeholder="Chiều Cao (cm)">
                <input id="weight" class="border rounded" type="number"
                    style="width: 100%;margin-bottom: 10px;padding: 2px;" placeholder="Cân Nặng (kg)">
                <input id="age" class="border rounded" type="number"
                    style="width: 100%;margin-bottom: 10px;padding: 2px;" placeholder="Tuổi">
                <div class="dropup">
                    <button class="btn btn-primary dropdown-toggle border rounded" data-toggle="dropdown"
                        aria-expanded="false" type="button" id="gender"
                        style="width: 100%;padding-top: 3px;padding-bottom: 3px;margin-bottom: 10px;background-color: #ffffff;color: #000000;">Giới
                        Tính</button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" role="presentation"
                            onclick="var gender = document.getElementById('gender'); gender.innerText = 'Nam'; gender.setAttribute('gender', 'male')">Nam</a>
                        <a class="dropdown-item" role="presentation"
                            onclick="var gender = document.getElementById('gender'); gender.innerText = 'Nữ'; gender.setAttribute('gender', 'female')">Nữ</a>
                    </div>
                </div>
                <div class="dropup">
                    <button id="intensity" intensity="1" class="btn btn-primary dropdown-toggle border rounded"
                        data-toggle="dropdown" aria-expanded="false" type="button"
                        style="width: 100%;padding-top: 3px;padding-bottom: 3px;margin-bottom: 10px;background-color: #ffffff;color: #000000;">Cường
                        Độ Vận Động&nbsp;</button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" role="presentation"
                            onclick="var intensity = document.getElementById('intensity'); intensity.innerText = 'Ít hoặc không vận động (Ví dụ như dân văn phòng)'; intensity.setAttribute('intensity', '1.2')">Ít
                            hoặc không vận động (Ví dụ như dân văn
                            phòng)</a>
                        <a class="dropdown-item" role="presentation"
                            onclick="var intensity = document.getElementById('intensity'); intensity.innerText = 'Vận động nhẹ (Thể dục nhẹ từ 1 đến 3 ngày/tuần)'; intensity.setAttribute('intensity', '1.3')">Vận
                            động nhẹ (Thể dục nhẹ từ 1 đến 3 ngày/tuần)</a>
                        <a class="dropdown-item" role="presentation"
                            onclick="var intensity = document.getElementById('intensity'); intensity.innerText = 'Vận động vừa phải (Tập luyện cường độ 3 đến 5 ngày/tuần)'; intensity.setAttribute('intensity', '1.5')">Vận
                            động vừa phải (Tập luyện cường độ 3 đến 5
                            ngày/tuần)</a>
                        <a class="dropdown-item" role="presentation"
                            onclick="var intensity = document.getElementById('intensity'); intensity.innerText = 'Tập luyện khá nặng (6 đến 7 ngày/tuần)'; intensity.setAttribute('intensity', '1.7')">Tập
                            luyện khá nặng (6 đến 7 ngày/tuần)</a>
                        <a class="dropdown-item" role="presentation"
                            onclick="var intensity = document.getElementById('intensity'); intensity.innerText = 'Tập luyện rất nặng (Tập luyện cường độ cao 6 đến 7 ngày/tuần)'; intensity.setAttribute('intensity', '1.9')">Tập
                            luyện rất nặng (Tập luyện cường độ cao 6 đến 7
                            ngày/tuần)</a>

                    </div>
                </div>
                <button class="btn btn-primary text-break bg-white border rounded" type="button"
                    style="width: 100%;background-color: transparent;color: #000000;padding-top: 3px;padding-bottom: 3px;margin-bottom: 10px;"
                    onclick="
                        var height = document.getElementById('height').value;
                        var weight = document.getElementById('weight').value;
                        var age = document.getElementById('age').value;
                        var gender = document.getElementById('gender').getAttribute('gender');
                        var intensity = document.getElementById('intensity').getAttribute('intensity');
                        var calo;
                        if (gender == 'male') {
                            calo = (((9.99 * weight) + (6.25 * height) - (4.92 * age) + 5)) * Number(intensity);
                        } else {
                            calo = (((9.99 * weight) + (6.25 * height) - (4.92 * age) - 161)) * Number(intensity);
                        }
                        var html = `<div class='alert alert-info' role='alert'>Lượng calo bạn cần cung cấp để duy trì cân nặng là: `+ calo +`</div>`;
                        document.getElementById('resultBRM').innerHTML = html;
                    ">Kết
                    Quả</button>
                <div id="resultBRM"></div>
            </div>
            <div class="col-sm-12 col-md-6" data-aos="flip-up" data-aos-delay="200">
                <div class="text-center">
                    <div class="fb-page" data-href="https://www.facebook.com/shopwheydanang/" data-tabs="timeline"
                        data-width="" data-height="" data-small-header="false" data-adapt-container-width="true"
                        data-hide-cover="false" data-show-facepile="true">
                        <blockquote cite="https://www.facebook.com/shopwheydanang/" class="fb-xfbml-parse-ignore"><a
                                href="https://www.facebook.com/shopwheydanang/">Shop Whey Đà Nẵng</a></blockquote>
                    </div>

                </div>

                <hr>
            </div>
        </div>
    </div>
</div>